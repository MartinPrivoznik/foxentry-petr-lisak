{
  "compilerOptions": {
    "target": "es2023",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "#*": ["*"]
    }
  },
  "plugins": [
    {
      "transform": "typescript-transform-paths"
    }
  ],
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules"]
}
