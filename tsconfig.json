{
  "compilerOptions": {
    "target": "es2023",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules"]
}
